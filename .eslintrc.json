{
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true
    },
    "extends": [
        "plugin:react-hooks/recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".js"] }],
        "react/prop-types": "off",
        "object-shorthand": 0,
        "no-console": "off",
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto",
              "react/prop-types": 0 ,
              "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".js"] }]
            }
          ],
        "import/prefer-default-export": "off"
    }
}
